<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%=link_to patient.name, patient %></h3>
  </div>
  <div class="panel-body">
    <div class="container">
      <div class="col-md-6">
        <ul>
          <strong>Código </strong>: <%=patient.patient_id %><br>
          <strong>Email: </strong> <%=patient.email %><br>
          <strong>Sexo: </strong> <%=patient.gender.description %><br>
          <strong>Idade: </strong><%=patient.age %><br>
          <strong>Altura: </strong><%=patient.height %>m<br>
          <strong>Peso: </strong> <%=patient.weight %>kg<br>
          <%=link_to "Editar Dados", edit_patient_path(patient) %><br>
        </ul>
      </div>
      <div class="col-md-6">
        <strong>IMC: </strong><%= patient.imc %><br>
        <strong>Peso Ideal: </strong><%= patient.calc_ideal_weight %> kg - <%= patient.type_imc %><br>
        <strong>Peso a perder:</strong> <%= patient.calc_amount_lose %> kg<br>
        <strong>Caloria Diárias: </strong><%= patient.calc_calories(1.2) %>  Kcal<br>
      </div>
    </div>
  </div>
</div>
